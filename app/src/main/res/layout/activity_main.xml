<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/layout_display"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="#ffffff"
        android:elevation="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_display_num1"
            android:text="1"
            android:textColor="#000"
            android:textSize="35sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_display_calculator"
            android:text="+"
            android:textColor="#000"
            android:textSize="35sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_display_num2"
            android:text="2"
            android:textColor="#000"
            android:textSize="35sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_display_result"
            android:layout_below="@id/tv_display_num2"
            android:text="3"
            android:textColor="#000"
            android:textSize="44sp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="20dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:background="#f7f7f7">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/layout_dial">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_1"
                    android:text="1"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>
                <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/text_1234"-->
            <!--android:text="2"-->
            <!--android:textSize="32sp"-->
            <!--android:textColor="#000"-->
            <!--android:clickable="true"-->
            <!--android:onClick="onButtonClick"-->
            <!--android:width="0dp"-->
            <!--android:layout_weight="1"/>-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_2"
            android:text="2"
            android:layout_gravity="center"
            android:textSize="33sp"
            android:textColor="#000"
            android:onClick="onButtonClick"
            android:background="@android:color/transparent"
            android:width="0dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_3"
            android:text="3"
            android:layout_gravity="center"
            android:textSize="33sp"
            android:textColor="#000"
            android:onClick="onButtonClick"
            android:background="@android:color/transparent"
            android:width="0dp"
            android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_4"
                    android:text="4"
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/text_1234"-->
                <!--android:text="2"-->
                <!--android:textSize="32sp"-->
                <!--android:textColor="#000"-->
                <!--android:clickable="true"-->
                <!--android:onClick="onButtonClick"-->
                <!--android:width="0dp"-->
                <!--android:layout_weight="1"/>-->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_5"
                    android:text="5"
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_6"
                    android:layout_gravity="center_vertical"
                    android:text="6"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_7"
                    android:text="7"
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_8"
                    android:text="8"
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_9"
                    android:text="9"
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_dot"
                    android:text="."
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_0"
                    android:text="0"
                    android:layout_gravity="center_vertical"
                    android:textSize="33sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_del"
                    android:text="删除"
                    android:layout_gravity="center_vertical"
                    android:textSize="26sp"
                    android:textColor="#000"
                    android:onClick="onButtonClick"
                    android:background="@android:color/transparent"
                    android:width="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#eeeeee">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/btn_plus"
                android:text="+"
                android:textSize="40sp"
                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                android:onClick="onButtonClick"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_minus"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="_"
                android:textSize="40sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:onClick="onButtonClick"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_multi"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="*"
                android:textSize="40sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:onClick="onButtonClick"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_div"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="40sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:onClick="onButtonClick"
                android:background="@android:color/transparent"/>
            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_equal"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="40sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:background="@android:color/transparent"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
